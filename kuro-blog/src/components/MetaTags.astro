---
const { title, description } = Astro.props;

const [authorHandle, currentPath] = [
  "@kurojifusky",
  `https://blog.kurojifusky.com${Astro.url.pathname}`,
];
---

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="robots" content="index,follow,archive" />
  <meta name="viewport" content="width=device-width=1" />
  <meta name="description" content={description} />
  <meta property="og:site_name" content="Kuroji Fusky Blog" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={currentPath} />
  <meta property="og:type" content="website" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:url" content={currentPath} />
  <meta name="twitter:site" content={authorHandle} />
  <meta name="twitter:creator" content={authorHandle} />
  <title>{title}</title>
  <link rel="icon" href="/icon_48x48.png" type="image/png" />
  <link rel="icon" href="/icon_144x144.png" sizes="144x144" type="image/png" />
  <link rel="icon" href="/icon_192x192.png" sizes="192x192" type="image/png" />
  <link rel="icon" href="/icon_256x256.png" sizes="256x256" type="image/png" />
  <link rel="icon" href="/icon_384x384.png" sizes="384x384" type="image/png" />
  <link rel="icon" href="/icon_512x512.png" sizes="512x512" type="image/png" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="canonical" href={currentPath} />
</head>
