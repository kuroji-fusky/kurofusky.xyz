{
  "name": "skepfusky-monorepo",
  "private": true,
  "workspaces": [
    "skepfusky-v6-next",
    "skepfusky-cms"
  ],
  "devDependencies": {
    "concurrently": "^7.3.0",
    "prettier": "^2.7.1"
  },
  "scripts": {
    "init": "concurrently \"yarn --cwd ./frontend install\" \"yarn --cwd ./backend install\"",
    "dev": "concurrently -k -n next,strapi \"yarn dev:next\" \"yarn dev:strapi\"",
    "dev:strapi": "yarn --cwd ./backend develop",
    "start:strapi": "yarn --cwd ./backend start",
    "build:strapi": "yarn --cwd ./backend build",
    "dev:next": "yarn --cwd ./frontend dev",
    "build:next": "yarn --cwd ./frontend build"
  }
}
