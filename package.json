{
  "name": "kurowo",
  "type": "module",
  "private": true,
  "workspaces": [
    "sites/*",
    "shared/**"
  ],
  "scripts": {
    "dev:portfolio": "turbo run dev --filter=portfolio",
    "dev:labs": "turbo run dev --filter=labs",
    "dev:blog": "turbo run dev --filter=blog",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,js,mjs,vue,md,astro}\"",
    "prepare": "husky install",
    "nuxt:prepare": "",
    "postinstall": "cd sites/portfolio && npx nuxt prepare && cd ../labs && npx nuxt prepare"
  },
  "lint-staged": {
    "src/**": "prettier --write .",
    "shared/**": "prettier --write ."
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.14",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.2",
    "turbo": "^1.10.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "plugins": [
      "prettier-plugin-astro"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
