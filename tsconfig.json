{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$contentful": ["src/lib/contentful"],
      "$components/*": ["src/lib/components/*"],
      "$icons/*": ["src/lib/icons/*"]
    },

    "types": ["unplugin-icons/types/astro"],

    // For Lit components
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  }
}
